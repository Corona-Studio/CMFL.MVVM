<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Heyo.Controls"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Heyo.Controls.ArcProgressBar"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300" Padding="0" x:Name="uc" Foreground="#FF828282">
    <Grid>
        <Viewbox>
            <ed:Arc x:Name="Track" Fill="#FFE6E6E6" ArcThickness="0.1" Stretch="None" StartAngle="0"
                    StrokeThickness="0" EndAngle="360" ArcThicknessUnit="Percent" Width="300" Height="300" />
        </Viewbox>
        <Viewbox>
            <ed:Arc x:Name="Indicator" ArcThickness="0.2" Fill="#FF06B025" Stretch="None" StartAngle="0"
                    StrokeThickness="0" ArcThicknessUnit="Percent" Height="300" Width="300" />
        </Viewbox>
    </Grid>
</UserControl>