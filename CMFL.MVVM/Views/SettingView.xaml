<Page x:Class="CMFL.MVVM.Views.SettingView"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="12"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CMFL.MVVM.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:controls="clr-namespace:Heyo.Controls;assembly=Heyo"
      xmlns:xamlHelper="clr-namespace:CMFL.MVVM.Class.Helper.XamlHelper"
      xmlns:controls1="clr-namespace:CMFL.MVVM.Controls"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:converter="clr-namespace:CMFL.MVVM.Class.Converter"
      mc:Ignorable="d" DataContext="{Binding SettingPageViewModel,Source={StaticResource Locator}}"
      d:DesignHeight="888" d:DesignWidth="730">
    <Page.Resources>
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Page.Resources>
    <Grid ClipToBounds="True">
        <Grid>
            <ScrollViewer PreviewMouseWheel="UIElement_OnPreviewMouseWheel" VerticalScrollBarVisibility="Visible"
                          Padding="0" Margin="0,80,0,80">
                <StackPanel>
                    <Grid>
                        <StackPanel>
                            <materialDesign:Card Background="#CCFFFFFF" Margin="40,0">
                                <Expander Foreground="Black" Background="{x:Null}">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Rocket"
                                                                     Width="25" Height="25"
                                                                     Foreground="#FF00EC7B" />
                                            <TextBlock Text="{DynamicResource LauncherSettings}" Foreground="#DD000000"
                                                       Margin="0"
                                                       Padding="5" VerticalAlignment="Center" FontSize="15" />
                                        </StackPanel>
                                    </Expander.Header>
                                    <StackPanel>
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22*" />
                                                <ColumnDefinition Width="95*" />
                                                <ColumnDefinition Width="148*" />
                                                <ColumnDefinition Width="21*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="FileDocumentEdit"
                                                                     Foreground="{DynamicResource SystemIndigo1}"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource DownloadThreads}"
                                                       FontSize="12" Padding="10"
                                                       Grid.Column="1" />
                                            <Slider
                                                Grid.Column="2"
                                                TickFrequency="5"
                                                Foreground="{DynamicResource SystemBlue1}"
                                                Orientation="Horizontal"
                                                Minimum="1"
                                                Maximum="512"
                                                Value="{Binding DownloadThreads, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                SmallChange="1" VerticalAlignment="Center" />
                                            <TextBlock Padding="5" Grid.Column="3" HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" Text="{Binding DownloadThreads}" />
                                        </Grid>
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*" />
                                                <ColumnDefinition Width="159*" />
                                                <ColumnDefinition Width="283*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="FileDocumentEdit" Foreground="#DDFF5151"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource EnableDetailedLauncherLogging}"
                                                       FontSize="12" Padding="10"
                                                       Grid.Column="1" />
                                            <ToggleButton
                                                Grid.Column="2"
                                                IsChecked="{Binding DebugMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#FF82FF53"
                                                Background="#64dd17" HorizontalAlignment="Right" />
                                        </Grid>
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*" />
                                                <ColumnDefinition Width="159*" />
                                                <ColumnDefinition Width="283*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="Atom" Foreground="#DD51A4FF"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource LiteMode}"
                                                       FontSize="12" Padding="10"
                                                       Grid.Column="1" />
                                            <ToggleButton
                                                Grid.Column="2"
                                                IsChecked="{Binding LiteMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#FF82FF53"
                                                Background="#64dd17" HorizontalAlignment="Right" />
                                        </Grid>
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*" />
                                                <ColumnDefinition Width="159*" />
                                                <ColumnDefinition Width="283*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="FormatFont" Foreground="#DDFF5151"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource InterfaceFont}"
                                                       FontSize="12" Padding="10"
                                                       Grid.Column="1" />
                                            <ComboBox
                                                SelectedIndex="{Binding SelectedFontIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                ItemsSource="{Binding FontList, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}"
                                                BorderBrush="#B2000000" Grid.Column="2"
                                                materialDesign:HintAssist.Hint="{DynamicResource InterfaceFont}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Padding="5" FontSize="13" FontFamily="{Binding}"
                                                                   Text="{Binding}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*" />
                                                <ColumnDefinition Width="159*" />
                                                <ColumnDefinition Width="283*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="Language" Foreground="#DDFB7E00"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource Language}" FontSize="12"
                                                       Grid.Column="1" VerticalAlignment="Center" Padding="10"
                                                       HorizontalAlignment="Left" />
                                            <ComboBox
                                                SelectedIndex="{Binding SelectedLanguageIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                ItemsSource="{Binding Language, Mode=OneTime, UpdateSourceTrigger=PropertyChanged}"
                                                BorderBrush="#B2000000" Grid.Column="2"
                                                materialDesign:HintAssist.Hint="{DynamicResource LanguageHint}" />
                                        </Grid>
                                        <TextBlock HorizontalAlignment="Center" Padding="30,10,30,10"
                                                   Text="{DynamicResource TranslatorInfo}" />
                                        <Grid Margin="30,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="37*" />
                                                <ColumnDefinition Width="159*" />
                                                <ColumnDefinition Width="283*" />
                                            </Grid.ColumnDefinitions>
                                            <materialDesign:PackIcon Kind="FolderText" Foreground="#DD000000"
                                                                     Width="20" Height="20"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource OpenLogsFolder}"
                                                       FontSize="12" Padding="10"
                                                       Grid.Column="1" />
                                            <Button
                                                Grid.Column="2" Padding="3" Command="{Binding OpenLogsFolderCommand}"
                                                Foreground="#DD000000" Content="{DynamicResource OpenLogsFolder}"
                                                Background="{x:Null}" HorizontalAlignment="Right"
                                                BorderBrush="{x:Null}" FontSize="12" />
                                        </Grid>
                                    </StackPanel>
                                </Expander>
                            </materialDesign:Card>
                            <materialDesign:Card
                                Margin="40,10,40,0"
                                Background="#CCFFFFFF">
                                <StackPanel ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <Expander Foreground="Black" Background="{x:Null}">
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Lightbulb"
                                                                         Width="25" Height="25"
                                                                         Foreground="#42a5f5" />
                                                <TextBlock Text="{DynamicResource ClientLaunch}" Foreground="#DD000000"
                                                           Margin="0"
                                                           Padding="5" VerticalAlignment="Center" FontSize="15" />
                                            </StackPanel>
                                        </Expander.Header>
                                        <StackPanel>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="159*" />
                                                    <ColumnDefinition Width="109*" />
                                                    <ColumnDefinition Width="32*" />
                                                    <ColumnDefinition Width="109*" />
                                                    <ColumnDefinition Width="32*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Alert" Foreground="#FFFFAE00" />
                                                        <TextBlock Padding="5,0"
                                                                   Text="{DynamicResource MemorySettingTip}" />
                                                    </StackPanel>
                                                </Grid.ToolTip>
                                                <materialDesign:PackIcon Kind="Memory" Foreground="#DD0051FF"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         Grid.Column="0" />
                                                <TextBlock Text="{DynamicResource LaunchMemory}" Padding="10"
                                                           FontSize="12" Grid.Column="1" VerticalAlignment="Center"
                                                           HorizontalAlignment="Left" />
                                                <TextBox
                                                    Text="{Binding MinMemory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Grid.Column="2" VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="{DynamicResource MinMem}" />
                                                <TextBlock Text="MB" HorizontalAlignment="Center"
                                                           Foreground="#DD000000"
                                                           Grid.Column="3" VerticalAlignment="Center" />
                                                <TextBox
                                                    Text="{Binding MaxMemory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Grid.Column="4" VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="{DynamicResource LaunchMemory}" />
                                                <TextBlock Text="MB" HorizontalAlignment="Center"
                                                           Foreground="#DD000000"
                                                           Grid.Column="5" VerticalAlignment="Center" />
                                            </Grid>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                                        Margin="0,0,30,0">
                                                <ToggleButton
                                                    Style="{DynamicResource MaterialDesignSwitchToggleButton}"
                                                    IsChecked="{Binding AutoMemory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Foreground="#FF82FF53"
                                                    Background="#64dd17" />
                                                <TextBlock Text="{DynamicResource AutomaticSetMemory}"
                                                           Background="{x:Null}" FontSize="12" />
                                            </StackPanel>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="159*" />
                                                    <ColumnDefinition Width="283*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon Kind="ServerNetwork"
                                                                         Foreground="#DD44C708"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         Grid.Column="0" />
                                                <TextBlock Grid.Column="1" Padding="10"
                                                           Text="{DynamicResource JoinServerAfterLaunch}"
                                                           FontSize="12" />
                                                <TextBox
                                                    Grid.Column="2"
                                                    Text="{Binding ServerIp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    VerticalAlignment="Center">
                                                    <materialDesign:HintAssist.Hint>
                                                        <Run Text="{DynamicResource ServerIP}" />
                                                    </materialDesign:HintAssist.Hint>
                                                </TextBox>
                                            </Grid>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="159*" />
                                                    <ColumnDefinition Width="283*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon Kind="MusicNote" Foreground="#DDFF51E7"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Text="{DynamicResource ResumeMusic}"
                                                           FontSize="12" Padding="10"
                                                           Grid.Column="1" />
                                                <ToggleButton
                                                    Grid.Column="2"
                                                    IsChecked="{Binding ResumeMusic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Foreground="#FF82FF53"
                                                    Background="#64dd17" HorizontalAlignment="Right" />
                                            </Grid>
                                            <materialDesign:Card
                                                HorizontalAlignment="Center" Background="#33FFF300">
                                                <StackPanel>
                                                    <Expander
                                                        Width="480" Background="{x:Null}">
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Left">
                                                                <materialDesign:PackIcon Kind="DecagramOutline"
                                                                                         Width="20" Height="20"
                                                                                         VerticalAlignment="Center"
                                                                                         HorizontalAlignment="Center"
                                                                                         Foreground="#DDFF0000" />
                                                                <TextBlock Padding="5" FontSize="12"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           Text="{DynamicResource AdvanceLaunchSetting}" />
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <StackPanel
                                                            Orientation="Vertical"
                                                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                                                <materialDesign:PackIcon Kind="AlertDecagram"
                                                                                         Foreground="#ef5350"
                                                                                         Width="15" Height="15"
                                                                                         VerticalAlignment="Center" />
                                                                <TextBlock
                                                                    Text="{DynamicResource AdvanceLaunchWarning}"
                                                                    Padding="5" />
                                                            </StackPanel>
                                                            <StackPanel Margin="10,10">
                                                                <materialDesign:Card Background="#33FFFFFF">
                                                                    <StackPanel Margin="10,10">
                                                                        <Grid>
                                                                            <TextBlock Padding="5"
                                                                                       Text="{DynamicResource EnableGc}"
                                                                                       HorizontalAlignment="Left" />
                                                                            <ToggleButton x:Name="EnableGcToggle"
                                                                                          IsChecked="{Binding EnableGc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                                          Foreground="#FF82FF53"
                                                                                          Background="#64dd17"
                                                                                          HorizontalAlignment="Right" />
                                                                        </Grid>
                                                                        <Grid Margin="0,5,0,0"
                                                                              IsEnabled="{Binding IsChecked, ElementName=EnableGcToggle}">
                                                                            <TextBlock Text="{DynamicResource GcType}"
                                                                                       Padding="5"
                                                                                       HorizontalAlignment="Left" />
                                                                            <ComboBox
                                                                                SelectedIndex="{Binding SelectedGcTypeIndex}"
                                                                                HorizontalAlignment="Right" Width="100"
                                                                                materialDesign:HintAssist.Hint="{DynamicResource GcType}">
                                                                                <ComboBoxItem
                                                                                    Content="{DynamicResource None}" />
                                                                                <ComboBoxItem>G1GC</ComboBoxItem>
                                                                                <ComboBoxItem>SerialGc</ComboBoxItem>
                                                                                <ComboBoxItem>ParallelGc</ComboBoxItem>
                                                                                <ComboBoxItem>CmsGc</ComboBoxItem>
                                                                            </ComboBox>
                                                                        </Grid>
                                                                        <Grid HorizontalAlignment="Center">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="17*" />
                                                                                <ColumnDefinition Width="347*" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <materialDesign:PackIcon
                                                                                Kind="CodeArray"
                                                                                Foreground="#ff5252" Width="15"
                                                                                Height="15" />
                                                                            <TextBlock Foreground="#DD000000"
                                                                                       Grid.Column="1">
                                                                                <Run
                                                                                    Text="{DynamicResource AddParameterManually}" />
                                                                                <Run Foreground="#ff5252"
                                                                                     Text="{DynamicResource AddParameterManuallyHighlight}" />
                                                                            </TextBlock>
                                                                        </Grid>
                                                                        <TextBox HorizontalAlignment="Center"
                                                                                 Foreground="#DD000000" Width="418"
                                                                                 Text="{Binding AdvanceLaunchSetting, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                            <materialDesign:HintAssist.Hint>
                                                                                <Run Foreground="#DD000000"
                                                                                     Text="{DynamicResource ParameterInputHint}" />
                                                                            </materialDesign:HintAssist.Hint>
                                                                        </TextBox>
                                                                    </StackPanel>
                                                                </materialDesign:Card>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Expander>
                                                </StackPanel>
                                            </materialDesign:Card>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35*" />
                                                    <ColumnDefinition Width="105*" />
                                                    <ColumnDefinition Width="113*" />
                                                    <ColumnDefinition Width="20*" />
                                                    <ColumnDefinition Width="112*" />
                                                    <ColumnDefinition Width="94*" />
                                                </Grid.ColumnDefinitions>
                                                <materialDesign:PackIcon Kind="Fullscreen"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" Width="20"
                                                                         Height="20" />
                                                <TextBlock Text="{DynamicResource ScreenResolution}"
                                                           Padding="10"
                                                           FontSize="12" Grid.Column="1" VerticalAlignment="Center"
                                                           HorizontalAlignment="Left" />
                                                <TextBox
                                                    Text="{Binding ScreenSetting.ScreenX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Grid.Column="2" VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="{DynamicResource Width}" />
                                                <TextBlock Text="*" Grid.Column="3" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" />
                                                <TextBox
                                                    Text="{Binding ScreenSetting.ScreenY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Grid.Column="4" VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="{DynamicResource Height}" />
                                                <CheckBox Background="#FF3AA0B7" Content="{DynamicResource FullScreen}"
                                                          Grid.Column="5"
                                                          IsChecked="{Binding ScreenSetting.IsFullScreen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalAlignment="Right" />
                                            </Grid>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="159*" />
                                                    <ColumnDefinition Width="283*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.ToolTip>
                                                    <StackPanel>
                                                        <TextBlock>
                                                            <Run Foreground="Orange"
                                                                 Text="{DynamicResource DefaultModeDescription}" />
                                                            <Run Foreground="White"
                                                                 Text="{DynamicResource DefaultModeDescriptionHighlight}" />
                                                        </TextBlock>
                                                        <TextBlock>
                                                            <Run Foreground="Orange"
                                                                 Text="{DynamicResource BmclModeDescriptionHighlight}" />
                                                            <Run Foreground="White"
                                                                 Text="{DynamicResource BmclModeDescription2}" />
                                                        </TextBlock>
                                                        <TextBlock>
                                                            <Run Foreground="Orange"
                                                                 Text="{DynamicResource MCLauncherModeDescriptionHighlight}" />
                                                            <Run Foreground="White"
                                                                 Text="{DynamicResource BmclModeDescription2}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid.ToolTip>
                                                <materialDesign:PackIcon Kind="Codepen" Foreground="#DDFF2F2F"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" Width="20"
                                                                         Height="20" Margin="8,8,9,7" />
                                                <TextBlock Text="{DynamicResource VersionInsulationSetting}"
                                                           FontSize="12" Grid.Column="1" Padding="10" />
                                                <ToggleButton Grid.Column="2" HorizontalAlignment="Right"
                                                              Foreground="#FF82FF53"
                                                              Background="#64dd17"
                                                              IsChecked="{Binding EnableVersionInsulation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </Grid>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="87*" />
                                                    <ColumnDefinition Width="118*" />
                                                    <ColumnDefinition Width="118*" />
                                                    <ColumnDefinition Width="118*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Information"
                                                                                 Foreground="#FF00B9FF" />
                                                        <TextBlock Padding="5,0,0,0">
                                                            <Run Text="{DynamicResource EnableBmclapiToolTip}" />
                                                            <Run Foreground="#FFFFAE00"
                                                                 Text="{DynamicResource EnableBmclapiToolTipHighlight}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid.ToolTip>
                                                <materialDesign:PackIcon Kind="Download" Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Text="{DynamicResource ResourceServer}" Grid.Column="1"
                                                           FontSize="12" Padding="10" />
                                                <RadioButton Grid.Column="2"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Background="#FF3AA0B7"
                                                             ToolTip="{DynamicResource MojangServerToolTip}"
                                                             IsChecked="{Binding UseMojangServer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             GroupName="DownloadServer"
                                                             Content="{DynamicResource MojangServer}" />
                                                <RadioButton HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             ToolTip="{DynamicResource BMCLServerToolTip}"
                                                             Background="#FF3AA0B7" Grid.Column="3"
                                                             IsChecked="{Binding EnableBmclApi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             GroupName="DownloadServer"
                                                             Content="{DynamicResource Bmclapi}" />
                                                <RadioButton HorizontalAlignment="Center"
                                                             VerticalAlignment="Center" Grid.Column="4"
                                                             Background="#FF3AA0B7"
                                                             Content="{DynamicResource DetectServerAutomatic}"
                                                             ToolTip="{DynamicResource AutoSelecterverToolTip}"
                                                             IsChecked="{Binding AutoDetectBestDownloadServer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             GroupName="DownloadServer" />
                                            </Grid>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="246*" />
                                                    <ColumnDefinition Width="195*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Information"
                                                                                 Foreground="#FF00B9FF" />
                                                        <TextBlock Padding="5,0,0,0">
                                                            <Run Text="{DynamicResource EnableHttpsForBmclapiToolTip}" />
                                                            <Run Foreground="#FFFFAE00"
                                                                 Text="{DynamicResource EnableHttpsForBmclapiToolTipHighlight}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid.ToolTip>
                                                <materialDesign:PackIcon Kind="SecurityNetwork" Width="20" Height="20"
                                                                         Foreground="#DD000000"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Text="{DynamicResource EnableHttpsForBmclapi}"
                                                           FontSize="12" Grid.Column="1" Padding="10"
                                                           HorizontalAlignment="Left" />
                                                <CheckBox Tag="HttpsBMCLServer"
                                                          HorizontalAlignment="Right" Grid.Column="2"
                                                          VerticalAlignment="Center" Background="#FF3AA0B7"
                                                          Content="{DynamicResource Use}"
                                                          IsChecked="{Binding EnableHttpsBmclApi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </Grid>
                                            <Grid Margin="30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="159*" />
                                                    <ColumnDefinition Width="283*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.ToolTip>
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Alert" Foreground="#FFFFAE00" />
                                                        <TextBlock Padding="5,0,0,0"
                                                                   Text="{DynamicResource JavaPathToolTip}" />
                                                        <TextBlock Foreground="#FFFFAE00"
                                                                   Text="{DynamicResource JavaPathToolTipHighlight}" />
                                                    </StackPanel>
                                                </Grid.ToolTip>
                                                <materialDesign:PackIcon Kind="LanguageJava" Foreground="#DDFB7E00"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />
                                                <TextBlock Text="{DynamicResource JavaPath}" FontSize="12"
                                                           Grid.Column="1" VerticalAlignment="Center" Padding="10"
                                                           HorizontalAlignment="Left" />
                                                <ComboBox
                                                    SelectedIndex="{Binding JavaSelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ItemsSource="{Binding Javas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    BorderBrush="#B2000000" Grid.Column="2">
                                                    <materialDesign:HintAssist.Hint>
                                                        <TextBlock Text="{DynamicResource SelectJavaHint}" />
                                                    </materialDesign:HintAssist.Hint>
                                                </ComboBox>
                                            </Grid>
                                            <Grid HorizontalAlignment="Right" Margin="0,0,30,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Content="{DynamicResource Browse}"
                                                        BorderBrush="{x:Null}" Foreground="#3949ab"
                                                        Background="{x:Null}"
                                                        Command="{Binding SetJavaManuallyCommand}" />
                                                <Button Content="{DynamicResource SetJavaAutomatic}"
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Foreground="#DD000000" Background="#FF109C22"
                                                        Margin="5" Grid.Column="2" BorderBrush="#FF109C22"
                                                        Command="{Binding AutoSetJavaCommand}" />
                                                <Button Background="{x:Null}" BorderBrush="{x:Null}"
                                                        Command="{Binding DownloadJavaCommand}"
                                                        ToolTip="{DynamicResource DownloadJavaToolTip}"
                                                        Style="{DynamicResource MaterialDesignRaisedButton}"
                                                        Grid.Column="1" Foreground="#DD000000">
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                                    HorizontalAlignment="Center"
                                                                    Visibility="{Binding IsDownloadJavaButtonEnable, Converter={StaticResource InverseBoolToVisConverter}}">
                                                            <TextBlock Text="{Binding JavaDownloadProgress}"
                                                                       VerticalAlignment="Center"
                                                                       HorizontalAlignment="Center"
                                                                       FlowDirection="LeftToRight"
                                                                       Foreground="#DD000000" />
                                                            <ProgressBar
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Bottom"
                                                                IsIndeterminate="True"
                                                                Style="{DynamicResource MaterialDesignCircularProgressBar}"
